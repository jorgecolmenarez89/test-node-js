doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title My Site  #{title}
    link(rel='stylesheet', href='/public/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/public/css/app.css')

  body

    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      .container
        a.navbar-brand(href='#') API
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item
              a.nav-link(href='/')
                | Home 
                span.sr-only (current)
            li.nav-item
              a.nav-link(href='/items') productos
          form.form-inline.my-2.my-lg-0(method='GET', action='/api/items')
            input.form-control.mr-sm-2(name='q', type='search', placeholder='Search', aria-label='Search')
            button.btn.btn-light.my-2.my-sm-0(type='submit') Search
     	
    block content

    script(src='/public/js/jquery.min.js')
    script(src='/public/bootstrap/js/bootstrap.min.js')
    block scripts